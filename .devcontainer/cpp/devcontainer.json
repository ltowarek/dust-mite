{
    "name": "C++",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../../"
    },
    "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",
    "workspaceFolder": "/workspace/car",
    "runArgs": [
        // Mount ESP32
        // Need to hard-code the device due to https://github.com/microsoft/vscode-remote-release/issues/3972
        // "--device",
        // "/dev/ttyACM0",
        // Set environment variables
        "--env-file",
        ".env"
    ],
    "containerEnv": {
        "PRE_COMMIT_SCRIPT": "/workspace/car/scripts/pre-commit.sh"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "idf.showOnboardingOnInit": false,
                "idf.toolsPath": "${containerEnv:IDF_TOOLS_PATH}",
                "idf.espIdfPath": "${containerEnv:IDF_PATH}",
                "idf.pythonBinPath": "${containerEnv:IDF_TOOLS_PATH}/python_env/idf5.3_py3.10_env/bin/python",
                "idf.port": "${containerEnv:ESP32_DEVICE}",
                "idf.flashType": "UART",
                "idf.adapterTargetName": "esp32s3",
                "cmake.generator": "Ninja",
                "git.openRepositoryInParentFolders": "always",
                "cSpell.words": [
                    "devcontainer",
                    "UART",
                    "cpptools",
                    "espressif",
                    "mcpwm",
                    "gpio",
                    "netif",
                    "cmpr",
                    "LOGD",
                    "LOGI",
                    "LOGW",
                    "LOGE",
                    "SNTP",
                    "RSSI",
                    "atten"
                ]
            },
            "extensions": [
                "ms-vscode.cpptools",
                "ms-vscode.cmake-tools",
                "espressif.esp-idf-extension@1.11.1",
                "streetsidesoftware.code-spell-checker",
                "GitHub.vscode-github-actions"
            ]
        }
    },
    "remoteUser": "vscode",
    "initializeCommand": "touch .env"
}
