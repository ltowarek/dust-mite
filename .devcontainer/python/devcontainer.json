{
    "name": "Python",
    "build": {
        "dockerfile": "./Dockerfile",
        "context": "../../"
    },
    "runArgs": [
        // Mount PS5 controller
        // Need to hard-code the device due to https://github.com/microsoft/vscode-remote-release/issues/3972
        // "--device",
        // "/dev/dual_sense",
        // Set environment variables
        "--env-file",
        ".env"
    ],
    // Need to "activate" venv in VSCode because of https://github.com/microsoft/vscode-python/issues/10165
    "remoteEnv": {
        "PATH": "/opt/venv/bin:${containerEnv:PATH}",
        "VIRTUAL_ENV": "/opt/venv"
    },
    "containerEnv": {
        "PRE_COMMIT_SCRIPT": "/${containerWorkspaceFolder}/controller/scripts/pre-commit.sh"
    },
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/venv",
                "python.analysis.enabled": false,
                "python.analysis.typeCheckingMode": "off",
                "python.testing.pytestEnabled": true,
                "python.testing.pytestArgs": [
                    "tests"
                ],
                "[python]": {
                    "editor.formatOnSave": true,
                    "editor.codeActionsOnSave": {
                        "source.fixAll": "explicit",
                        "source.organizeImports": "explicit"
                    },
                    "editor.defaultFormatter": "charliermarsh.ruff"
                },
                "ruff.importStrategy": "fromEnvironment",
                "mypy-type-checker.importStrategy": "fromEnvironment",
                "mypy-type-checker.reportingScope": "workspace",
                "cSpell.words": [
                    "pydualsense",
                    "pytest",
                    "venv",
                    "hidraw",
                    "hidapi",
                    "devcontainer",
                    "RSSI",
                    "raspberrypi"
                ]
            },
            "extensions": [
                "-ms-python.autopep8",
                "-dbaeumer.vscode-eslint",
                "-ms-python.vscode-pylance",
                "ms-python.python",
                "ms-python.debugpy",
                "streetsidesoftware.code-spell-checker",
                "charliermarsh.ruff",
                "ms-python.mypy-type-checker"
            ]
        }
    },
    "remoteUser": "vscode",
    "initializeCommand": "touch .env"
}
